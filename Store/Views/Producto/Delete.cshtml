@model Core.ViewModels.ProductoViewModel

@{
    ViewData["Title"] = "Eliminar";
}

<h3>Delete</h3>

<h5>Estas seguro que deseas eliminar esto?</h5>
<div>
    <h5>Producto</h5>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Descripción
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Stock)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Stock) unidades
        </dd>
    </dl>

    <form asp-action="DeleteProducto">
        <input type="hidden" asp-for="Id" />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <input type="submit" value="Eliminar" class="btn btn-danger btn-sm" /> |
        @Html.ActionLink("Ir a Index", "Index")
    </form>
</div>


