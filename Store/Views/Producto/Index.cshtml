@model List<Core.ViewModels.ProductoViewModel>
@{
    ViewData["Title"] = "Lista de Productos";
}

<div>
    <h4>Listado de Productos</h4>
    <hr />

    <p>
        @*<a asp-controller="Libro" asp-action="Create" class="btn btn-sm btn-primary">Nuevo</a>*@
        @Html.ActionLink("Nuevo", "Create", new { }, new { @class = "btn btn-primary btn-sm" })
    </p>

    <table class="table table-striped table-bordered">
        <thead>
            <tr class="text-center">
                <th>Descripción</th>
                <th>Stock (ud.)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var producto in Model)
            {
                <tr class="text-center">
                    <td>@producto.Descripcion</td>
                    <td>@producto.Stock</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = producto.Id }, new { @class = "btn btn-primary btn-sm" }) |
                        @Html.ActionLink("Details", "Details", new { id = producto.Id }, new { @class = "btn btn-success btn-sm" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = producto.Id }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

